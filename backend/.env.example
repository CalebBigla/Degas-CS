# Database
DATABASE_URL=postgresql://username:password@localhost:5432/gatekeeper_hq

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
QR_SECRET=your-super-secret-qr-signing-key-here

# Server Configuration
PORT=3001
NODE_ENV=development

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Supabase (Optional - if using Supabase instead of local PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# CORS
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100


# Email Configuration (Resend)
# Get your API key from: https://resend.com/api-keys
# Free tier: 3,000 emails/month, 100 emails/day
RESEND_API_KEY=re_123456789_YourResendAPIKeyHere
EMAIL_FROM=onboarding@resend.dev
